<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/tvRightAddress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="@string/right_address_for_shopping"
        android:textColor="#E91E63"
        android:textSize="32sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_best_quality"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_15dp"
        android:fontFamily="@font/poppins_light"
        android:gravity="center"
        android:text="@string/g_best_quality"
        android:textColor="#FF9800"
        android:textSize="@dimen/_12sp"
        app:layout_constraintEnd_toEndOf="@id/tvRightAddress"
        app:layout_constraintStart_toStartOf="@id/tvRightAddress"
        app:layout_constraintTop_toBottomOf="@id/tvRightAddress" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnStart"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="#E91E63"
        android:fontFamily="@font/poppins_thin"
        android:text="@string/start"
        android:textColor="@color/white"
        android:textSize="@dimen/_12sp"
        android:textStyle="bold"
        app:cornerRadius="4dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@id/tv_best_quality"
        app:layout_constraintStart_toStartOf="@id/tv_best_quality"
        app:layout_constraintTop_toBottomOf="@id/tv_best_quality" />

</androidx.constraintlayout.widget.ConstraintLayout>